        </div>
        <div class="mb-2">
          <label>AtraÅ¡anÄs vieta</label>
          <input type="text" name="location" class="form-control" value="<%= game.location %>">
        </div>
        <div class="mb-2">
          <label>Komponentes (komata atdalÄ«tas)</label>
          <input type="text" name="components" class="form-control" value="<%= game.components.join(' , ') %>">
        </div>
        <div class="mb-2">
          <label>Papildus komentÄrs</label>
          <textarea name="review" class="form-control"><%= game.review %></textarea>
        </div>
        <button type="submit" class="btn btn-success mt-2">SaglabÄt izmaiÅ†as</button>
